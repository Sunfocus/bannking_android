<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvAccountList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@color/white"
    android:clipToPadding="false"
    android:outlineSpotShadowColor="@android:color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="16dp"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:id="@+id/llAccountList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clr_green"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/LLOutSideBankChild"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtSubBnkNameChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_regular"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Transaction code" />

            <TextView
                android:id="@+id/txtAmountBankChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_regular"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="28sp"
                tools:text="$445.49" />

            <TextView
                android:id="@+id/tvAvailBalanceBankChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_regular"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/str_available_balance"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_moreChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_more"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/img_announceChild"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_announce"
                app:tint="@color/white" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>