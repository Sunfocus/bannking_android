<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/edittext_border_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:weightSum="1">


        <ImageView
            android:id="@+id/img_expense_color"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.07" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/source_sans_regular"
            android:paddingStart="10dp"
            android:textColor="@color/clr_text"
            android:textStyle="bold"
            tools:text="@string/str_rent_or_mortgage" />

        <TextView
            android:id="@+id/txt_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.23"
            android:fontFamily="@font/source_sans_regular"
            android:textAlignment="center"
            tools:text="@string/str_1_00" />


    </LinearLayout>


</LinearLayout>